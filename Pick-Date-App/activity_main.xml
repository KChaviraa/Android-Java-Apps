<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
    android:id="@+id/pickDate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pick Date"
    android:layout_marginTop="50dp"
    android:layout_marginStart="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
    <Button
    android:id="@+id/show"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show"
    android:layout_marginTop="50dp"
    android:layout_marginStart="75dp"
    app:layout_constraintBaseline_toBaselineOf="@+id/pickDate"
    app:layout_constraintStart_toEndOf="@+id/pickDate"
    />
    <TextView
    android:id="@+id/activity1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="50dp"
    android:text="Activity 1 on "
    android:textSize="18sp"
    android:textColor="@color/black"
    app:layout_constraintTop_toBottomOf="@+id/pickDate"
    app:layout_constraintStart_toStartOf="parent"/>
    <TextView
    android:id="@+id/activity2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="50dp"
    android:text="Activity 2 on "
    android:textSize="18sp"
    android:textColor="@color/black"
    app:layout_constraintTop_toBottomOf="@+id/activity1"
    app:layout_constraintStart_toStartOf="parent"/>
    <TextView
    android:id="@+id/activity3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="50dp"
    android:text="Activity 3 on "
    android:textSize="18sp"
    android:textColor="@color/black"
    app:layout_constraintTop_toBottomOf="@+id/activity2"
    app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
